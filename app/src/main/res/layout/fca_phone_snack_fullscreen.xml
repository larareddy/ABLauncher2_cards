<?xml version="1.0" encoding="utf-8"?>
<com.android.hmlauncher2.cards.phone.ActiveFullScreenCallSnackView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:background="@color/colorActiveButton"
    android:baselineAligned="false">
    <include layout="@layout/card_title" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content" android:padding="6dp"
        android:layout_height="wrap_content">
        <RelativeLayout android:orientation="vertical"
            android:layout_width="180dp" android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_height="wrap_content">
           <!-- <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="right"
                android:id="@+id/callers_imgid">

                <ImageView
                    android:id="@+id/caller_img_id"
                    android:layout_width="108dp"  android:layout_marginRight="15dp"
                    android:layout_height="108dp"
                    android:src="@drawable/navigation_snack"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="14dp"/>


            </RelativeLayout>-->
           <Button android:layout_width="120dp"
               android:layout_height="wrap_content" android:layout_margin="20dp"
               android:id="@+id/redial" android:background="@android:color/holo_green_dark"
               android:text="@string/button_redial" />
            <Button android:layout_width="120dp"  android:layout_margin="20dp"
                android:layout_height="wrap_content" android:layout_below="@+id/redial"
                android:id="@+id/end_call_button" android:background="@android:color/darker_gray"
                android:text="@string/button_endcall" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <!--<ImageView
                    android:id="@+id/blank_img"
                    android:layout_width="match_parent"  android:layout_marginRight="15dp"
                    android:layout_height="20dp"
                    android:src="@color/colorTrans"
                    android:layout_marginTop="12dp"/>-->
                <ImageView
                    android:id="@+id/caller_img_id"
                    android:layout_width="60dp"  android:layout_marginRight="15dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bg_signin"

                    android:layout_marginTop="24dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:text="Jeanne Anderson"
                    android:maxLines="1"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:textSize="28dp"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"/>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:text="(873) 806-8765"
                    android:maxLines="1"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:textSize="28dp"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:text="10:46:00"
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </LinearLayout>

       <!-- <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/end_call" android:layout_gravity="center"
                android:layout_width="match_parent"  android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:background="@color/colorRed"
                android:src="@drawable/end_call_ic"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal" android:layout_gravity="center"
            android:layout_height="wrap_content"  android:layout_marginBottom="14dp" android:layout_marginRight="0dp"
            android:background="@color/colorActiveButton">
            <LinearLayout
                android:layout_width="wrap_content" android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:id="@+id/call_forward_layout" android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/call_trans"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/call_forward"
                    android:layout_marginLeft="0dp" android:layout_weight="1"
                    android:layout_marginTop="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/call_transfer_textid"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                    android:layout_toEndOf="@id/call_trans" android:layout_gravity="center"
                    android:text="Transfer"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/mute_layout"
                android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/mute_butt"
                    android:layout_width="60dp"  android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/call_mute"
                    android:layout_marginLeft="0dp" android:layout_weight="1"
                    android:layout_marginTop="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                    android:layout_toEndOf="@id/call_trans" android:layout_gravity="center"
                    android:text="Mute"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/keypad_layout"
                android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="12dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/keypad"
                android:layout_width="60dp"  android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/call_join" android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                     android:layout_gravity="center"
                    android:text="Join Call"/>
                </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</com.android.hmlauncher2.cards.phone.ActiveFullScreenCallSnackView>