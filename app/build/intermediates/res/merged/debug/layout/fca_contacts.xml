<?xml version="1.0" encoding="utf-8"?><com.android.hmlauncher2.cards.phone.ContanctsMealView xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:gravity="center"    android:foregroundGravity="center" android:padding="2dp"    android:layout_height="match_parent">    <include layout="@layout/card_title" android:padding="5dp"  />   <com.android.hmlauncher2.cards.widgets.HomeScreenViewPager        android:id="@+id/pager"        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content"       android:layout_marginLeft="0dp"       >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="4dp"        android:weightSum="1">    <LinearLayout        android:id="@+id/fav_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:layout_gravity="left"        android:layout_marginLeft="10dp"        android:layout_weight=".5">        <TextView            android:id="@+id/fav_title"            android:layout_width="match_parent"            android:layout_marginTop="2dp"            android:layout_marginBottom="2dp"            android:layout_marginRight="4dp"            android:layout_marginLeft="4dp"            android:layout_gravity="center"            android:textColor="@color/colorWhite"            android:textSize="40dp"            android:gravity="center"            android:fontFamily="sans-serif-condensed"            android:foregroundGravity="center"            android:background="@color/colorComfortSeatBg"            android:text="Favorites"            android:layout_height="wrap_content" />        <!--<include layout="@layout/fca_contacts_list"/>-->        <android.support.v7.widget.RecyclerView            android:id="@+id/recycler_view"            android:layout_below="@id/fav_title"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scrollbars="none"            android:layout_marginTop="5dp"            android:background="@android:color/transparent"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:id="@+id/recent_layout"        android:layout_gravity="right"        android:layout_marginRight="10dp"        android:layout_weight=".5">        <TextView            android:id="@+id/recent_title"            android:layout_width="match_parent"            android:layout_marginTop="2dp"            android:layout_marginBottom="2dp"            android:layout_marginRight="4dp"            android:layout_marginLeft="4dp"            android:layout_gravity="center"            android:textColor="@color/colorWhite"            android:textSize="40dp"            android:fontFamily="sans-serif-condensed"            android:gravity="center"            android:foregroundGravity="center"            android:background="@color/colorComfortSeatBgBlack"            android:text="Recent"            android:layout_height="wrap_content" />        <!--<include layout="@layout/fca_contacts_list" />-->        <android.support.v7.widget.RecyclerView            android:id="@+id/recent_recycler_view"            android:layout_below="@id/recent_title"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scrollbars="none"            android:layout_marginTop="5dp"            android:background="@android:color/transparent"/>    </LinearLayout>    </LinearLayout>    </com.android.hmlauncher2.cards.widgets.HomeScreenViewPager>    <include layout="@layout/page_indicator" /></com.android.hmlauncher2.cards.phone.ContanctsMealView>