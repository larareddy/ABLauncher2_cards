<?xml version="1.0" encoding="utf-8"?>
<com.android.hmlauncher2.cards.phone.ActiveCallSnackView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:background="@color/colorActiveButton"   >
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include layout="@layout/card_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView
                android:id="@+id/caller_img_id"
                android:layout_width="100dp"  android:layout_marginRight="15dp"
                android:layout_height="100dp"
                android:src="@drawable/bg_signin"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content" android:layout_marginTop="20dp"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="Jeanne Anderson"
                    android:maxLines="1"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:textSize="28dp"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:text="10:46:00"
                    android:maxLines="1"
                    android:textSize="22dp"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/end_call" android:layout_gravity="center"
                android:layout_width="wrap_content"  android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:src="@drawable/end_call_ic"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="226dp"
            android:orientation="horizontal" android:layout_gravity="center" android:layout_marginLeft="14dp"
            android:layout_height="match_parent"  android:layout_marginBottom="4dp" android:layout_marginRight="14dp"
            android:background="@color/colorActiveButton">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:id="@+id/call_forward_layout"   android:layout_marginBottom="4dp" android:layout_marginTop="4dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/call_trans"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call_forward"
                    android:layout_marginLeft="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/call_transfer_textid"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                    android:layout_toEndOf="@id/call_trans" android:layout_gravity="center"
                    android:text="Transfer"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/mute_layout" android:layout_marginTop="4dp"
                android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/mute_butt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call_mute"
                    android:layout_marginLeft="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                    android:layout_toEndOf="@id/call_trans" android:layout_gravity="center"
                    android:text="Mute"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/keypad_layout" android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="4dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/keypad"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call_join"
                    android:layout_marginLeft="0dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Join Call"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</com.android.hmlauncher2.cards.phone.ActiveCallSnackView>